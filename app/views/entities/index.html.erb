<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Entities</h1>
    <%= link_to "New Entity", new_entity_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700", data: { turbo_frame: "new_entity" } %>
  </div>

  <%= turbo_frame_tag "new_entity" %>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <%= turbo_frame_tag "entities" do %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 p-4">
        <%= render @entities %>
      </div>
    <% end %>
  </div>
</div>
