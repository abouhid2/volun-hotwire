<%= turbo_frame_tag entity do %>
  <div id="<%= dom_id(entity) %>" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
    <div class="p-6">
      <div class="flex items-center mb-4">
        <% if entity.logo_url.present? %>
          <img src="<%= entity.logo_url %>" alt="<%= entity.name %> logo" class="w-12 h-12 rounded-full object-cover mr-4">
        <% else %>
          <div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center mr-4">
            <span class="text-gray-500 text-xl font-bold"><%= entity.name.first.upcase %></span>
          </div>
        <% end %>
        <h2 class="text-xl font-semibold text-gray-800"><%= entity.name %></h2>
      </div>
      
      <% if entity.description.present? %>
        <p class="text-gray-600 mb-4 line-clamp-3"><%= entity.description %></p>
      <% end %>
      
      <div class="space-y-2 text-sm text-gray-500">
        <% if entity.website.present? %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>
            <%= link_to entity.website, entity.website, class: "hover:text-blue-500", target: "_blank" %>
          </div>
        <% end %>
        
        <% if entity.email.present? %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            <%= mail_to entity.email, entity.email, class: "hover:text-blue-500" %>
          </div>
        <% end %>
        
        <% if entity.phone.present? %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            <%= entity.phone %>
          </div>
        <% end %>
        
        <% if entity.address.present? %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            <%= entity.address %>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6 flex justify-end space-x-2">
        <%= link_to "View", entity, class: "text-blue-500 hover:text-blue-700" %>
        <%= link_to "Edit", edit_entity_path(entity), class: "text-gray-500 hover:text-gray-700" %>
        <%= button_to "Delete", entity, method: :delete, class: "text-red-500 hover:text-red-700", data: { turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
<% end %> 