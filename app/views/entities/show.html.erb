<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Entities", entities_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>

  <%= turbo_frame_tag @entity do %>
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="p-8">
        <div class="flex items-start mb-6">
          <% if @entity.logo_url.present? %>
            <img src="<%= @entity.logo_url %>" alt="<%= @entity.name %> logo" class="w-24 h-24 rounded-lg object-cover mr-6">
          <% else %>
            <div class="w-24 h-24 rounded-lg bg-gray-200 flex items-center justify-center mr-6">
              <span class="text-gray-500 text-4xl font-bold"><%= @entity.name.first.upcase %></span>
            </div>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @entity.name %></h1>
            <% if @entity.website.present? %>
              <a href="<%= @entity.website %>" target="_blank" class="text-blue-500 hover:text-blue-700 inline-flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                Visit Website
              </a>
            <% end %>
          </div>
        </div>

        <% if @entity.description.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-700 mb-3">About</h2>
            <div class="prose prose-blue max-w-none text-gray-600">
              <%= @entity.description %>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div>
            <h2 class="text-xl font-semibold text-gray-700 mb-3">Contact Information</h2>
            <div class="space-y-4">
              <% if @entity.email.present? %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                  <div>
                    <p class="text-sm text-gray-500">Email</p>
                    <%= mail_to @entity.email, @entity.email, class: "text-blue-500 hover:text-blue-700" %>
                  </div>
                </div>
              <% end %>
              
              <% if @entity.phone.present? %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                  <div>
                    <p class="text-sm text-gray-500">Phone</p>
                    <p class="text-gray-700"><%= @entity.phone %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <% if @entity.address.present? %>
            <div>
              <h2 class="text-xl font-semibold text-gray-700 mb-3">Location</h2>
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-3 text-gray-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                <div>
                  <p class="text-sm text-gray-500">Address</p>
                  <p class="text-gray-700 whitespace-pre-line"><%= @entity.address %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="flex justify-end space-x-3 border-t pt-6">
          <%= link_to "Edit", edit_entity_path(@entity), class: "bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded-lg" %>
          <%= button_to "Delete", @entity, method: :delete, class: "bg-red-100 hover:bg-red-200 text-red-700 font-medium py-2 px-4 rounded-lg", data: { turbo_confirm: "Are you sure you want to delete this entity?" } %>
        </div>
      </div>
    </div>
  <% end %>
</div> 