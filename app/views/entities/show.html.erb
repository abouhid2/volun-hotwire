<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <div class="flex justify-between items-center">
      <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @entity.name %></h3>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_entity_path(@entity), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to "Back", entities_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    </div>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">Description</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @entity.description %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Website</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= link_to @entity.website, @entity.website, target: "_blank", class: "text-indigo-600 hover:text-indigo-900" if @entity.website.present? %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Email</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= mail_to @entity.email, @entity.email, class: "text-indigo-600 hover:text-indigo-900" %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Phone</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @entity.phone %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Address</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @entity.address %></dd>
      </div>
    </dl>
  </div>
</div>

<div class="mt-8">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex justify-between items-center">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Events</h3>
        <%= link_to "New Event", new_entity_event_path(@entity), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700", data: { turbo_frame: "new_event" } %>
      </div>

      <%= turbo_frame_tag "new_event" %>

      <%= turbo_frame_tag "events" do %>
        <div class="mt-6 grid grid-cols-1 gap-4">
          <%= render @entity.events %>
        </div>
      <% end %>
    </div>
  </div>
</div>
