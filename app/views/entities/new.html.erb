<%= turbo_frame_tag "new_entity" do %>
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">New Entity</h2>
    
    <%= render "form", entity: @entity %>
    
    <div class="mt-4 text-right">
      <%= link_to "Cancel", entities_path, class: "text-gray-500 hover:text-gray-700" %>
    </div>
  </div>
<% end %> 