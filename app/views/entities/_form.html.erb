<%= form_with(model: entity, class: "space-y-6") do |form| %>
  <% if entity.errors.any? %>
    <div class="bg-red-50 text-red-700 p-4 rounded-lg mb-6">
      <h3 class="font-medium"><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h3>
      <ul class="mt-2 ml-4 list-disc">
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :name, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :name, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :logo_url, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :logo_url, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div class="md:col-span-2">
      <%= form.label :description, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_area :description, rows: 4, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :website, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :website, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.email_field :email, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :phone, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.telephone_field :phone, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div class="md:col-span-2">
      <%= form.label :address, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :address, class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>
  </div>

  <div class="pt-4 flex justify-end">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg" %>
  </div>
<% end %> 